<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.suleymansrc.servisamca.ServisBilgisi"
    android:background="@drawable/arkaplanblue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ortalama Servis Hızı:"
        android:id="@+id/textView7"
        android:textColor="#fbdbad"
        android:textStyle="bold"
        android:textSize="19dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_below="@+id/imageView12"
        android:layout_alignStart="@+id/imageView12"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kalan Mesafe:"
        android:id="@+id/textView8"
        android:textColor="#fbdbad"
        android:textStyle="bold"
        android:textSize="19dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tahmini Kalan Zaman:"
        android:id="@+id/textView9"
        android:textColor="#fbdbad"
        android:textStyle="bold"
        android:textSize="19dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="80 "
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:textColor="#fbdbad"
        android:layout_marginLeft="10dp"
        android:textSize="19dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:textIsSelectable="false"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="258 metre"
        android:id="@+id/textView11"
        android:textStyle="bold"
        android:textColor="#fbdbad"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:textSize="19dp"
        android:textIsSelectable="false"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="15 dk"
        android:id="@+id/textView12"
        android:textStyle="bold"
        android:textColor="#fbdbad"
        android:textSize="19dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:textIsSelectable="false"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/imageView12"
        android:background="@drawable/gps"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="(km/sn)"
        android:id="@+id/textView19"
        android:textStyle="bold"
        android:textColor="#fbdbad"
        android:textSize="19dp"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView10"
        android:layout_toEndOf="@+id/textView11" />

    <Button
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:text="SERVİS BİLGİSİ"
        android:id="@+id/button85"
        android:background="@drawable/topbuton"
        android:textColor="#fbdbad"
        android:textStyle="bold"
        android:textSize="25dp"
        android:visibility="visible"
        android:enabled="true"
        android:layout_marginLeft="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
