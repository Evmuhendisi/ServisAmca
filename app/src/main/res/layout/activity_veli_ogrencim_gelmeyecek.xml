<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.suleymansrc.servisamca.VeliOgrencimGelmeyecek"
    android:background="@drawable/arkaplanblue">

    <Button
        android:layout_width="210dp"
        android:layout_height="100dp"
        android:id="@+id/button49"
        android:background="@drawable/velianasayfabuton"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#fbdbad"
        android:layout_marginTop="30dp"
        android:text="Bugün servisi hiç kullanmayacak."
        android:layout_below="@+id/button52"
        android:layout_alignStart="@+id/button50" />

    <Button
        android:layout_width="210dp"
        android:layout_height="100dp"
        android:text="Bugün okula sadece giderken servisi kullanmayacak."
        android:id="@+id/button50"
        android:background="@drawable/velianasayfabuton"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#fbdbad"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/button49"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="210dp"
        android:layout_height="100dp"
        android:text="Bugün okuldan sadece gelirken servisi kullanmayacak."
        android:id="@+id/button51"
        android:background="@drawable/velianasayfabuton"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#fbdbad"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/button50"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:text="ÖĞRENCİM GELMEYECEK"
        android:id="@+id/button52"
        android:background="@drawable/topbuton"
        android:textColor="#fbdbad"
        android:textStyle="bold"
        android:textSize="25dp"
        android:visibility="visible"
        android:enabled="true"
        android:layout_marginLeft="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
