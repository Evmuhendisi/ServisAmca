<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.suleymansrc.servisamca.SoforServisBilgileri"
    android:background="@drawable/arkaplanblue">

    <Button
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:text="SERVİS BİLGİLERİ"
        android:id="@+id/button60"
        android:background="@drawable/topbuton"
        android:textColor="#fbdbad"
        android:textStyle="bold"
        android:textSize="25dp"
        android:visibility="visible"
        android:enabled="true"
        android:layout_marginLeft="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4"
        android:layout_below="@+id/button60"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#0288D1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Şoförün İsmi:"
                    android:id="@+id/textView39"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#fbdbad"
                    android:layout_marginLeft="1dp" />

                <EditText
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText23"
                    android:background="@drawable/inputbackgroud"
                    android:padding="10dp"
                    android:text="Esma KARAMAN"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textAlignment="center" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Servis No :"
                    android:id="@+id/textView40"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#fbdbad"
                    android:layout_marginLeft="1dp" />

                <EditText
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText24"
                    android:background="@drawable/inputbackgroud"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:text="2&apos; nolu " />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Servis Plakası:"
                    android:id="@+id/textView41"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#fbdbad"
                    android:layout_marginLeft="1dp" />

                <EditText
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText25"
                    android:background="@drawable/inputbackgroud"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:text="59 YMT 478" />

            </TableRow>
        </TableLayout>
    </ScrollView>

    <ImageView
        android:layout_width="335dp"
        android:layout_height="6dp"
        android:id="@+id/imageView15"
        android:background="#ffffff"
        android:layout_below="@+id/scrollView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <ScrollView
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView5"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="10dp"
        android:background="#0288D1"
        android:layout_marginRight="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Servis Tipi :"
                    android:id="@+id/textView42"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#fbdbad"
                    android:layout_marginLeft="1dp" />

                <Spinner
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:id="@+id/spinner2"
                    android:layout_marginLeft="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Servis Modeli :"
                    android:id="@+id/textView43"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#fbdbad"
                    android:layout_marginLeft="1dp" />

                <Spinner
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:id="@+id/spinner3"
                    android:layout_marginLeft="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Güzergah :"
                    android:id="@+id/textView44"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#fbdbad"
                    android:layout_marginLeft="1dp" />

                <Spinner
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:id="@+id/spinner4"
                    android:layout_marginLeft="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Hostes :"
                    android:id="@+id/textView47"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#fbdbad"
                    android:layout_marginLeft="1dp" />

                <Spinner
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:id="@+id/spinner5"
                    android:layout_marginLeft="5dp" />
            </TableRow>

        </TableLayout>
    </ScrollView>

    <Button
        android:layout_width="162dp"
        android:layout_height="38dp"
        android:text="Kaydet"
        android:id="@+id/btnSoforServisBilgileriKaydet"
        android:background="@drawable/kaydetbutonu"
        android:textStyle="bold"
        android:textSize="21dp"
        android:textColor="#fbdbad"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
