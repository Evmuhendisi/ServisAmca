<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.suleymansrc.servisamca.MainActivity"
    android:background="@drawable/arkaplanblue">

    <Button
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:text="SERVİS NEREDE?"
        android:id="@+id/btnServisNerede"
        android:background="@drawable/anasayfaselector"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/btnVeliOgrenciDurumu"
        android:layout_alignStart="@+id/button13"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:text="AİDAT BİLGİLERİ"
        android:id="@+id/btnVeliAidat"
        android:background="@drawable/anasayfaselector"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignTop="@+id/btnServisNerede"
        android:layout_alignEnd="@+id/button13" />

    <Button
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:text="ÖĞRENCİM GELMEYECEK"
        android:id="@+id/btnVeliOgrencimGelmeyecek"
        android:background="@drawable/anasayfaselector"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/btnVeliAidat"
        android:layout_alignStart="@+id/btnVeliAidat"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:text="ANASAYFA"
        android:id="@+id/button13"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/topbuton"
        android:textColor="#fbdbad"
        android:textStyle="bold"
        android:textSize="25dp"
        android:visibility="visible"
        android:enabled="true"
        android:layout_marginLeft="27dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:text="BİLGİLERİM"
        android:id="@+id/btnVeliBilgileri"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/anasayfaselector"
        android:layout_alignEnd="@+id/btnVeliAidat"
        android:layout_below="@+id/button13"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:text="SERVİSİ ARA / MESAJ GÖNDER"
        android:id="@+id/btnVeliMesaj"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/anasayfaselector"
        android:layout_below="@+id/btnServisNerede"
        android:layout_alignStart="@+id/btnServisNerede"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:text="ÖĞRENCİ DURUMU"
        android:id="@+id/btnVeliOgrenciDurumu"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/anasayfaselector"
        android:layout_below="@+id/button13"
        android:layout_alignStart="@+id/button13"
        android:layout_marginTop="25dp" />


</RelativeLayout>
