<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.suleymansrc.servisamca.HostesAnasayfa"
    android:background="@drawable/arkaplanblue">
    <Button
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:text="YOKLAMA             AL"
        android:id="@+id/btnYoklamaAl"
        android:background="@drawable/anasayfaselector"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="19dp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/btnBilgilerim"
        android:layout_alignStart="@+id/button13" />

    <Button
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:text="BİLGİLERİM"
        android:id="@+id/btnBilgilerim"
        android:background="@drawable/anasayfaselector"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="19dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@+id/button13"
        android:layout_toEndOf="@+id/btnYoklamaAl"
        android:layout_marginTop="77dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:text="TOPLU MESAJ GÖNDER"
        android:id="@+id/btnMesaj"
        android:background="@drawable/anasayfaselector"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="19dp"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/btnYoklamaAl"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:text="ANASAYFA"
        android:id="@+id/button13"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/topbuton"
        android:textColor="#fbdbad"
        android:textStyle="bold"
        android:textSize="25dp"
        android:visibility="visible"
        android:enabled="true"
        android:layout_marginLeft="27dp" />

</RelativeLayout>
