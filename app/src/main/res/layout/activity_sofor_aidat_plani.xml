<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.suleymansrc.servisamca.SoforAidatPlani"
    android:background="@drawable/arkaplanblue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tarih seç :"
        android:id="@+id/textView52"
        android:textStyle="bold"
        android:textSize="17dp"
        android:textColor="#fbdbad"
        android:layout_below="@+id/button71"
        android:layout_alignStart="@+id/textView54" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Taksit sayısı :"
        android:id="@+id/textView53"
        android:textStyle="bold"
        android:textSize="17dp"
        android:textColor="#fbdbad"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/editText28"
        android:layout_marginBottom="13dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText28"
        android:hint="İsim Giriniz"
        android:textStyle="bold"
        android:textColor="#212121"
        android:textSize="19dp"
        android:background="@drawable/inputbackgroud"
        android:padding="10dp"
        android:text="8 "
        android:textAlignment="center"
        android:layout_below="@+id/datePicker"
        android:layout_alignStart="@+id/editText29"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Aidat Miktarı :"
        android:id="@+id/textView54"
        android:textStyle="bold"
        android:textSize="17dp"
        android:textColor="#fbdbad"
        android:layout_marginLeft="1dp"
        android:layout_below="@+id/editText28"
        android:layout_alignStart="@+id/textView53"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText29"
        android:hint="İsim Giriniz"
        android:textStyle="bold"
        android:textColor="#212121"
        android:textSize="19dp"
        android:background="@drawable/inputbackgroud"
        android:padding="10dp"
        android:text="175"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView54"
        android:layout_toEndOf="@+id/textView68" />

    <Button
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:text="ÖDEME PLANI OLUŞTUR"
        android:id="@+id/button71"
        android:background="@drawable/topbuton"
        android:textColor="#fbdbad"
        android:textStyle="bold"
        android:textSize="25dp"
        android:visibility="visible"
        android:enabled="true"
        android:layout_marginLeft="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:text="Kaydet"
        android:id="@+id/btnSoforOgrenciKaydet"
        android:background="@drawable/kaydetbutonu"
        android:textStyle="bold"
        android:textSize="21dp"
        android:textColor="#fbdbad"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="425dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Aidat hatırlatma zamanı :"
        android:id="@+id/textView68"
        android:textStyle="bold"
        android:textSize="17dp"
        android:textColor="#fbdbad"
        android:layout_marginLeft="1dp"
        android:layout_below="@+id/editText29"
        android:layout_alignStart="@+id/textView53"
        android:layout_marginTop="20dp" />

    <Spinner
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:id="@+id/spinnerSoforPlan"
        android:layout_alignTop="@+id/textView68"
        android:layout_alignEnd="@+id/editText29"
        android:layout_toEndOf="@+id/textView68"
        android:layout_marginTop="-14dp" />

    <DatePicker
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/datePicker"
        android:background="#0288D1"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/textView52"
        android:layout_alignStart="@+id/textView52"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp" />

</RelativeLayout>
