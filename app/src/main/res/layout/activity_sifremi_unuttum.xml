<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.suleymansrc.servisamca.SifremiUnuttum"
    android:background="@drawable/arkaplanblue">
    <EditText
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:hint="Adınızı Soyadınızı Giriniz"
        android:textSize="23dp"
        android:background="@drawable/inputbackgroud" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:id="@+id/editText14"
        android:hint="Telefon Numarası"
        android:textSize="23dp"
        android:layout_below="@+id/editText12"
        android:layout_alignLeft="@+id/editText12"
        android:layout_alignStart="@+id/editText12"
        android:layout_alignRight="@+id/editText12"
        android:layout_alignEnd="@+id/editText12"
        android:background="@drawable/inputbackgroud"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="ŞİFREYİ GÖNDER"
        android:id="@+id/button12"
        android:background="@drawable/velianasayfabuton"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#fbdbad"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editText14"
        android:layout_marginBottom="118dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VELİ"
        android:id="@+id/radioButton"
        android:layout_below="@+id/editText14"
        android:layout_alignStart="@+id/editText14"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textColor="#fbdbad" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ŞOFÖR"
        android:id="@+id/radioButton2"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignTop="@+id/radioButton"
        android:layout_toEndOf="@+id/radioButton"
        android:layout_marginLeft="10dp"
        android:textColor="#fbdbad" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOSTES"
        android:id="@+id/radioButton3"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/radioButton2"
        android:layout_toEndOf="@+id/radioButton2"
        android:layout_marginLeft="10dp"
        android:textColor="#fbdbad" />

    <Button
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:text="ŞİFREMİ UNUTTUM"
        android:id="@+id/button45"
        android:background="@drawable/topbuton"
        android:textColor="#fbdbad"
        android:textStyle="bold"
        android:textSize="25dp"
        android:visibility="visible"
        android:enabled="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
