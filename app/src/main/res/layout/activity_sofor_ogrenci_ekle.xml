<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.suleymansrc.servisamca.SoforOgrenciEkle"
    android:background="@drawable/arkaplanblue">

    <Button
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:text="ÖĞRENCİ EKLE"
        android:id="@+id/button63"
        android:background="@drawable/topbuton"
        android:textColor="#fbdbad"
        android:textStyle="bold"
        android:textSize="25dp"
        android:visibility="visible"
        android:enabled="true"
        android:layout_marginLeft="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView6"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:background="#0288D1"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="60dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Öğrencinin İsmi:"
                    android:id="@+id/textView48"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#fbdbad"
                    android:layout_marginLeft="1dp" />

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText26"
                    android:background="@drawable/inputbackgroud"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="Merve" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Öğrencinin Soyismi:"
                    android:id="@+id/textView49"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#fbdbad"
                    android:layout_marginLeft="1dp" />

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText27"
                    android:background="@drawable/inputbackgroud"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="Yılmaz" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Okul :"
                    android:id="@+id/textView69"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#fbdbad"
                    android:layout_marginLeft="1dp" />

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText58"
                    android:background="@drawable/inputbackgroud"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="Namık kemal ilköğretim okulu" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Sınıfı :"
                    android:id="@+id/textView70"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#fbdbad"
                    android:layout_marginLeft="1dp" />

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText59"
                    android:background="@drawable/inputbackgroud"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="3. Sınıf" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <Button
        android:layout_width="185dp"
        android:layout_height="43dp"
        android:text="İLERİ =>"
        android:id="@+id/btnSoforOgrenciEkleileri"
        android:background="@drawable/kaydetbutonu"
        android:textStyle="bold"
        android:textSize="21dp"
        android:textColor="#fbdbad"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="430dp" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/imageView18"
        android:layout_marginLeft="20dp"
        android:background="@drawable/personel"
        android:layout_below="@+id/button63"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Fotoğraf çek"
        android:id="@+id/button67"
        android:background="@drawable/topbutonv2"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#fbdbad"
        android:layout_below="@+id/button63"
        android:layout_alignEnd="@+id/button63"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/imageView18" />
</RelativeLayout>
