<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.suleymansrc.servisamca.SoforMesajGonder"
    android:background="@drawable/arkaplanblue">
    <EditText
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText11"
        android:hint="Bilgilendirme Yapmak İstediğiniz Mesajı Giriniz."
        android:textSize="19dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="125dp"
        android:layout_below="@+id/button40"
        android:layout_centerHorizontal="true"
        android:background="@drawable/inputbackgroud" />

    <Button
        android:layout_width="310dp"
        android:layout_height="62dp"
        android:text="SMS GÖNDER"
        android:id="@+id/btnSoforMesajGonder"
        android:background="@drawable/loginbuton"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#fbdbad"
        android:layout_below="@+id/editText11"
        android:layout_marginTop="35dp"
        android:layout_alignEnd="@+id/editText11"
        android:layout_alignStart="@+id/editText11" />

    <Button
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:text="MESAJ GÖNDER"
        android:id="@+id/button40"
        android:background="@drawable/topbuton"
        android:textColor="#fbdbad"
        android:textStyle="bold"
        android:textSize="25dp"
        android:visibility="visible"
        android:enabled="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Öğrencinin İsmi:"
        android:id="@+id/textView61"
        android:textStyle="bold"
        android:textSize="19dp"
        android:textColor="#fbdbad"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/button40"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:id="@+id/spinner7"
        android:layout_alignTop="@+id/textView61"
        android:layout_toEndOf="@+id/textView61"
        android:layout_marginTop="-10dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView20"
        android:background="@android:drawable/ic_input_add"
        android:layout_below="@+id/spinner7"
        android:layout_alignEnd="@+id/btnSoforMesajGonder" />

</RelativeLayout>
