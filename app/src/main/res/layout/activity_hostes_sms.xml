<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.suleymansrc.servisamca.HostesSms"
    android:background="@drawable/arkaplanblue">

    <Button
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:text="MESAJ GÖNDER"
        android:id="@+id/button40"
        android:background="@drawable/topbuton"
        android:textColor="#fbdbad"
        android:textStyle="bold"
        android:textSize="25dp"
        android:visibility="visible"
        android:enabled="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText60"
        android:hint="Bilgilendirme Yapmak İstediğiniz Mesajı Giriniz."
        android:textSize="19dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@drawable/inputbackgroud"
        android:padding="10dp"
        android:layout_below="@+id/button40"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="MESAJI GÖNDER"
        android:id="@+id/btnHostesMesajGonder"
        android:background="@drawable/loginbuton"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#fbdbad"
        android:layout_below="@+id/editText60"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

</RelativeLayout>
