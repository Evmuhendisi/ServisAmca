<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.suleymansrc.servisamca.SoforHarita"
    android:background="@drawable/arkaplanblue">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="275dp"
        android:id="@+id/imageView16"
        android:background="@drawable/gps"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/button82"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:text="Adresi Kaydet"
        android:id="@+id/btnSoforHaritaKaydet"
        android:background="@drawable/kaydetbutonu"
        android:textStyle="bold"
        android:textSize="21dp"
        android:textColor="#fbdbad"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Öğrencinin İsmi:"
        android:id="@+id/textView62"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#fbdbad"
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/imageView16"
        android:layout_alignStart="@+id/imageView16"
        android:layout_marginTop="35dp" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:id="@+id/spinner8"
        android:layout_alignTop="@+id/textView62"
        android:layout_toEndOf="@+id/textView62"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:text="HARİTA AYARLARI"
        android:id="@+id/button82"
        android:background="@drawable/topbuton"
        android:textColor="#fbdbad"
        android:textStyle="bold"
        android:textSize="25dp"
        android:visibility="visible"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />
</RelativeLayout>
